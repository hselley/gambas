' Gambas module file

Public Sub Main()
  Dim i, j, n As Short
  
  Print "Ingrese un numero positivo"
  Input n
  
  If n > 0 Then
    For i = 1 To n - 1 Step 1
      For j = 1 To i Step 1
        Print j;;
      Next
      Print
    Next
    For i = n To 1 Step -1
      For j = 1 To i Step 1
        Print j;;
      Next
      Print
    Next
  Else
    Print "El numero no es positivo"
  Endif
End
